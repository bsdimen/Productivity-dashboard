{
  "compilerOptions": {
    "target": "es5", // Set the JavaScript version for compiled code (ES5 for compatibility)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Includes libraries for DOM and JavaScript
    "allowJs": true, // Allows JavaScript files to be compiled
    "skipLibCheck": true, // Skips type checking for declaration files
    "esModuleInterop": true, // Enables interoperability with CommonJS and ES modules
    "allowSyntheticDefaultImports": true, // Allows default imports from modules without default exports
    "strict": true, // Enables strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforces consistent file naming
    "module": "esnext", // Sets module code generation
    "moduleResolution": "node", // Uses Node's module resolution
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Compiles each file in isolation
    "noEmit": true, // Prevents TypeScript from emitting compiled files
    "jsx": "react-jsx" // Uses the new JSX transform (React 17+)
  },
  "include": [
    "src"
  ], // Includes all TypeScript files in the src directory
  "exclude": [
    "node_modules"
  ] // Excludes the node_modules directory from compilation
}